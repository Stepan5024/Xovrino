<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_shape_2"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:autoSizeTextType="uniform"
                android:text="Маршрут Всей семьей"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:autoSizeTextType="uniform"
                android:text="Конно-спортивная"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/texftView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:text="база ЦСКА"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textVie4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relat"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:autoSizeTextType="uniform"
                android:text="Кликните чтобы открыть карту"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="italic" />

            <!--<com.example.p.pro_cao.RoundedCornerImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_below="@+id/textView3"
                android:layout_margin="10dp"
                android:background="@drawable/cska"
                android:scaleType="fitXY" />-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cd1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="32dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    >

                    <com.stepan.bokarev.pro_cao.RoundedCornerImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:background="@drawable/horse"
                        android:scaleType="fitXY" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/relat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/card1"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/button_return"
                    style="@style/button_mono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="Назад" />

                <Button
                    android:id="@+id/button"
                    style="@style/button_mono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="Дальше" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cd1"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp">

                <ScrollView
                    android:id="@+id/sc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <me.biubiubiu.justifytext.library.JustifyTextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:text="Строительство конноспортивного комплекса Центрального спортивного клуба Армии, расположенного достаточно недалеко от центра города, началось в 1976 году в период подготовки Москвы к XXII Олимпийским играм. Официальное открытие комплекса состоялось в 1980 году незадолго до старта Олимпиады. Здесь же проводились тренировки спортсменов к олимпийским соревнованиям по конному спорту и современному пятиборью. Территория конноспортивной базы ЦСКА составляет около 5,5 гектара с различными современными спортивными сооружениями: закрытым конным манежем для проведения соревнований по конкуру и выездке, открытым разминочным полем и открытым поле для выездки, зимними конюшнями с денниками, ветеринарным лазаретом, стрелковым тиром, спортивными залами для занятий бадминтоном, тхэквондо и фехтованием.В настоящее время на КСБ ЦСКА тренируется спортивная команда Клуба по современному пятиборью и конному спорту, занимаются учащиеся СДЮШОР ЦСКА по конному спорту и современному пятиборью, тхэквондо, бадминтону. Регулярно проводятся соревнования по конкуру и выездке, крупные международные соревнования по современному пятиборью, различные зрелищные конноспортивные мероприятия."
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <me.biubiubiu.justifytext.library.JustifyTextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>