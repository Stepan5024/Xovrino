<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_shape_1"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="15dp"
                    android:autoSizeTextType="uniform"
                    android:text="Маршрут От метро до метро"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    tools:targetApi="o" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cd1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/textView5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="32dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                   android:layout_gravity="center">

                    <com.stepan.bokarev.pro_cao.RoundedCornerImageView
                        android:id="@+id/imageView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hovrino5"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/mainText12"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="11dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="10dp"
                        android:text="История района Ховрино"
                        android:textColor="@color/black"
                        android:textSize="26sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cd1"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp">

                <ScrollView
                    android:id="@+id/sc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView15">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:textStyle="italic"
                            android:text="Попробуйте аудиогид"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:textSize="20sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/rell1"
                            android:layout_below="@+id/tv5">
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Слушать"
                                android:id="@+id/play"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Пауза"
                                android:id="@+id/pause"
                                android:focusableInTouchMode="false"
                                android:layout_alignTop="@+id/play"
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>

                        <me.biubiubiu.justifytext.library.JustifyTextView
                            android:id="@+id/tv7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rell1"
                            android:layout_margin="10dp"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/relat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card1"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_return"
                    style="@style/button_mono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Назад" />

                <Button
                    android:id="@+id/button"
                    style="@style/button_mono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Дальше" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textVie4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:autoSizeTextType="uniform"
                    android:text="Кликните чтобы открыть карту"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="italic" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>